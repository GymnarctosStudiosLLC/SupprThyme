# Ignore dependency directories
bower_components/
jspm_packages/

# Ignore Typescript v1 declaration files
typings/

# Ignore optional npm cache directory
.npm

# Ignore optional eslint cache
.eslintcache

# Ignore optional REPL history
.node_repl_history

# Ignore output of 'npm pack'
*.tgz

# Ignore Yarn Integrity file
.yarn-integrity

# Ignore dotenv environment variables file
.env

# Ignore package-lock as it complicates merging
package-lock.json

# Ignore IDE and editor configurations
.vscode/
.idea/
*.sublime-project
*.sublime-workspace

# Ignore temporary files
*.tmp
